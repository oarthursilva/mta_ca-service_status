{
    "_version": "1.25.0",
    "sap.app": {
        "id": "cards.servicestatus",
        "type": "card",
        "title": "{{title}}",
        "subTitle": "{{subtitle}}",
        "description": "{{description}}",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "tags": {
            "keywords": [
                "List",
                "Card",
                "Grouping"
            ]
        }
    },
    "sap.ui": {
        "technology": "UI5",
        "deviceTypes": {
            "phone": true,
            "tablet": true,
            "desktop": true
        },
        "icons": {}
    },
    "sap.card": {
        "type": "Table",
        "configuration": {
            "destinations": {
                "bc_so-srv": {
                    "name": "bc_so-srv",
                    "defaultUrl": "/odata/v4/status"
                }
            },
            "editor": "dt/configuration",
            "parameters": {
                "title": {
                    "value": "{{title}}"
                },
                "subtitle": {
                    "value": "{{subtitle}}"
                }
            }
        },
        "data": {
            "request": {
                "url": "{{destinations.bc_so-srv}}/odata/v4/status/StatusOverview",
                "withCredentials": true,
                "parameters": {
                    "$expand": "component,status",
                    "$count": true
                }
            },
            "path": "/value"
        },
        "header": {
            "title": "{{title}}",
            "subTitle": "{{subtitle}}",
            "actions": [
                {
                    "type": "Navigation",
                    "enabled": true,
                    "parameters": {
                        "ibnTarget": {
                            "semanticObject": "statusoverview",
                            "action": "display"
                        }
                    }
                }
            ]
        },
        "content": {
            "row": {
                "highlight": "{status/name}",
                "actions": [
                    {
                        "type": "Navigation",
                        "enabled": true,
                        "parameters": {
                            "ibnTarget": {
                                "semanticObject": "statusoverview",
                                "action": "display"
                            }
                        }
                    }
                ],
                "columns": [
                    {
                        "title": "Current status",
                        "value": "{component/name}",
                        "width": "55%",
                        "state": "{status/name}",
                        "showStateIcon": true
                    },
                    {
                        "title": "Date",
                        "value": "{date}",
                        "width": "25%",
                        "hAlign": "Center"
                    },
                    {
                        "title": "Time",
                        "value": "{time}",
                        "width": "20%",
                        "hAlign": "Center"
                    }
                ]
            }
        }
    },
    "sap.platform.mobilecards": {
        "compatible": true
    }
}